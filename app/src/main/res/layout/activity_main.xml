<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.androidessence.systemuisample.MainActivity">

    <Button
        android:id="@+id/dim_bars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dim_bars"/>

    <Button
        android:id="@+id/hide_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_status"/>

    <Button
        android:id="@+id/hide_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_navigation"/>

    <Button
        android:id="@+id/reveal_bars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reveal_bars"/>
</LinearLayout>
